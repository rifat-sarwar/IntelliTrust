# Database Configuration
DATABASE_URL=postgresql://intellitrust:intellitrust123@localhost:5432/intellitrust
POSTGRES_DB=intellitrust
POSTGRES_USER=intellitrust
POSTGRES_PASSWORD=intellitrust123

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Settings
ENVIRONMENT=development
DEBUG=true
API_V1_STR=/api/v1
PROJECT_NAME=IntelliTrust
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# File Storage (S3/MinIO)
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin123
S3_BUCKET_NAME=intellitrust-documents
S3_REGION=us-east-1

# AI Engine
AI_ENGINE_URL=http://localhost:8001
AI_MODEL_PATH=/app/models

# Blockchain (Hyperledger Fabric)
FABRIC_CA_URL=http://localhost:7054
FABRIC_NETWORK_CONFIG_PATH=./blockchain/network-config
FABRIC_CHANNEL_NAME=intellitrust-channel
FABRIC_CHAINCODE_NAME=document-chaincode

# Blockchain (Ethereum/Polygon)
BLOCKCHAIN_TYPE=ethereum
ETHEREUM_RPC_URL=https://sepolia.infura.io/v3/YOUR_PROJECT_ID
POLYGON_RPC_URL=https://polygon-mumbai.infura.io/v3/YOUR_PROJECT_ID
CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
PRIVATE_KEY=your-private-key-here

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_URL=https://your-domain.com/webhooks

# Monitoring and Logging
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Document Processing
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,tiff
DOCUMENT_PROCESSING_TIMEOUT=300  # 5 minutes

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=IntelliTrust
